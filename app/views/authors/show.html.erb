<h1><%= @author.name %> (b. <%= @author.birth_year %>)</h1>

<p>Books:<p>
  <ul>
    <% @author.books.each do |book| %>
    <li><%= link_to book.title, book_path(book) %></li>

    <% end %>
  </ul>

  <%= link_to "Edit #{@author.name}", edit_author_path(@author) %>
  <%= button_to "Delete #{@author.name}", author_path(@author), method: :delete %>
  <%= link_to "Add Book", new_book_path %>
